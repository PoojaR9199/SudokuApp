<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediumHistory">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/gameheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/flag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/flag"/>
                <TextView
                    android:id="@+id/gamename"
                    android:layout_toRightOf="@+id/flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="30dp"
                    android:text="Games"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gamebox"
                android:layout_width="321dp"
                android:layout_height="202dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/rounded_background">

                <RelativeLayout
                    android:id="@+id/play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">


                    <TextView

                        android:id="@+id/gameplayed"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game Played"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp"/>

                    <TextView

                        android:id="@+id/numofplay"
                        android:layout_toRightOf="@+id/gameplayed"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp"/>

                </RelativeLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_below="@+id/play"
                    android:layout_width="290dp"
                    android:layout_centerInParent="true"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey2"/>
                <RelativeLayout
                    android:id="@+id/won"
                    android:layout_below="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/gamewon"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/TEXT"
                        android:text="Game won"
                        />

                    <TextView

                        android:id="@+id/numofwon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/gamewon"
                        android:text="0"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp" />

                </RelativeLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_below="@+id/won"
                    android:layout_width="290dp"
                    android:layout_centerInParent="true"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey2"/>

                <RelativeLayout
                    android:id="@+id/rate"
                    android:layout_below="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp">

                    <TextView

                        android:id="@+id/winrate"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Win Rate"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp"/>
                    <TextView

                        android:id="@+id/percentage"
                        android:layout_toRightOf="@+id/winrate"
                        android:layout_marginLeft="165dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp"/>



                </RelativeLayout>


            </RelativeLayout>



        </RelativeLayout>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/time"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/time"/>
                <TextView
                    android:id="@+id/timename"
                    android:layout_toRightOf="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="30dp"
                    android:text="Time"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timebox"
                android:layout_width="321dp"
                android:layout_height="158dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/rounded_background">

                <RelativeLayout
                    android:id="@+id/best"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp">
                    <TextView

                        android:id="@+id/besttime"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Time"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp"/>

                    <TextView

                        android:id="@+id/numofbest"
                        android:layout_toRightOf="@+id/besttime"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp"/>

                </RelativeLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_below="@+id/best"
                    android:layout_width="290dp"
                    android:layout_centerInParent="true"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey2"/>
                <RelativeLayout
                    android:id="@+id/averge"
                    android:layout_below="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/avgtime"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/TEXT"
                        android:text="Average Time"
                        />
                    <TextView

                        android:id="@+id/numofavg"
                        android:layout_toRightOf="@+id/avgtime"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/TEXT"
                        android:textSize="20dp"/>

                </RelativeLayout>


            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>
</FrameLayout>